<Window x:Class="TestingAppInterface.Testing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingAppInterface"
        mc:Ignorable="d"
        Title="Тестирование" Height="500" Width="800" Uid="win1">
    <Viewbox Stretch="Uniform">
        <Canvas Background="White" Height="500" Width="800">

        <!-- Заголовок -->
        <TextBlock TextWrapping="Wrap" Text="" 
                   FontFamily="Wide Latin" FontSize="22" Foreground="#FF0032FF" Opacity="0.2"
                   Canvas.Left="0" Canvas.Top="-3" Canvas.Right="0" Canvas.Bottom="0" Height="513" Width="800"/>

        <!-- TextBlock -->
        <TextBlock x:Name="ExerciseTestTextBlock" TextWrapping="Wrap" Text="TextBlock" Background="White" 
                   Canvas.Left="76" Canvas.Top="40" Canvas.Right="104" Canvas.Bottom="178" Height="210" Width="648" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Bahnschrift Light" FontSize="32"/>

        <!-- TextBox -->
        <TextBox  x:Name="YourAnswerTestTextBox" TextWrapping="Wrap" Text="TextBox" 
                 Canvas.Left="76" Canvas.Top="277" Canvas.Right="406" Canvas.Bottom="116" Height="38" Width="324" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_TextChanged" FontSize="22"/>

        <!-- Button "Ответить" -->

            <!-- Button "Следующее задание" -->
        <Button Content="Следующее задание" x:Name="NextTaskTest" VerticalAlignment="Top" 
                FontFamily="Bahnschrift Light" Opacity="0.82" Foreground="White" 
                Background="#FF0032FF" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                Height="69" Canvas.Left="308" Canvas.Top="405" Width="184" HorizontalAlignment="Center" FontSize="14" Click="Next_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Button "Предыдущее задание" -->
        <Button Content="Предыдущее задание" x:Name="LastTaskTest" VerticalAlignment="Top" 
                FontFamily="Bahnschrift Light" Opacity="0.82" Foreground="White" 
                Background="Gray" BorderThickness="1" RenderTransformOrigin="0.07,0.215" Padding="10"
                Height="67" Canvas.Left="12" Canvas.Top="407" Width="187" FontSize="14" Click="LastTaskTest_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Button "Завершить тест" -->
        <Button Content="Завершить тест" x:Name="FinishTest" VerticalAlignment="Top" 
                FontFamily="Bahnschrift Light" Opacity="0.82" Foreground="White" 
                Background="Red" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                Height="67" Canvas.Left="596" Canvas.Top="407" Width="172" HorizontalAlignment="Center" FontSize="14" Click="FinishTest_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
            <TextBlock x:Name="TaskCounterTextBlock" Height="22" Canvas.Left="740" TextWrapping="Wrap" Text="TextBlock" Canvas.Top="10" Width="50"/>

        </Canvas>
    </Viewbox>

</Window>