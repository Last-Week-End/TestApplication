<Window x:Class="TestingAppInterface.ResultTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestingAppInterface"
      mc:Ignorable="d" 
      WindowState="Maximized"  
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Result" Height="500" Width="800">
    <Viewbox Stretch="Uniform">

        <Canvas Background="White" Width="800" Height="500">
            <!-- TextBlock with long text -->
            <TextBlock TextWrapping="Wrap" Text="" 
                   FontFamily="Wide Latin" FontSize="22" Foreground="#FF0032FF" Opacity="0.2"
                   Canvas.Left="0" Canvas.Top="-3" Canvas.Right="0" Canvas.Bottom="0" Height="513" Width="800"/>

            <!-- DataGrid -->
            <DataGrid x:Name="AnswerGrid" AutoGenerateColumns="False" 
                  Canvas.Left="10" Canvas.Top="10" Canvas.Right="40" Canvas.Bottom="281" HorizontalAlignment="Center" Height="271" VerticalAlignment="Top" Width="780">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Задание" Binding="{Binding Task}" Width="*"/>
                    <DataGridTextColumn Header="Ваш ответ" Binding="{Binding YourAnswer}" Width="*"/>
                    <DataGridTextColumn Header="Правильный ответ" Binding="{Binding CorrectAnswer}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Button "Вернутся в главное меню" -->
            <Button Content="Вернутся в главное меню" Click="Button_Click" VerticalAlignment="Top" 
                FontFamily="Bahnschrift Light" Foreground="White" 
                Background="Red" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                Height="86" Canvas.Left="34" Canvas.Top="349" Opacity="0.98" FontSize="16">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Canvas>
    </Viewbox>
</Window>
