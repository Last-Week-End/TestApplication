<Window x:Class="TestingAppInterface.Training"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingAppInterface"
        mc:Ignorable="d"
        Title="Training" Height="450" Width="800">

    
        <Grid Width="800" Height="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock TextWrapping="Wrap" Text="" Margin="0,-3,0,0" Grid.RowSpan="4" FontFamily="Wide Latin" FontSize="22" Foreground="#FF0032FF" Opacity="0.2"/>
            <TextBlock TextWrapping="Wrap" Text="TextBlock" Background="White" Grid.Row="1" Grid.Column="1" Margin="76,28,76,152"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Grid.Row="2" Grid.Column="1" Margin="76,308,407,81" Height="45" Width="317"/>
            <TextBlock TextWrapping="Wrap" Text="TextBlock" Background="White" Grid.Row="3" Grid.Column="1" Margin="76,358,407,26" Width="317" Height="45"/>

            <Button Content="Ответить" x:Name="ButtonTraining" VerticalAlignment="Top" 
                    FontFamily="Bahnschrift Light" FontSize="24" Foreground="White" 
                    Background="#FFAFAFAF" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                    Height="44" Grid.Row="2" Grid.Column="2" Margin="0,309,241,0" HorizontalAlignment="Right" Width="146"  Opacity="0.98">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Завершить тренировку" x:Name="BonTraining" VerticalAlignment="Top" 
                    FontFamily="Bahnschrift Light" Foreground="White" 
                    Background="Red" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                    Height="44" Grid.Row="3" Grid.Column="2" Margin="0,361,76,0" HorizontalAlignment="Right" Width="146"  Opacity="0.98" FontSize="11">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Следующее задание" x:Name="But" VerticalAlignment="Top" 
                    FontFamily="Bahnschrift Light" Foreground="White" 
                    Background="#FF0032FF" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                    Height="44" Grid.Row="3" Grid.Column="2" Margin="0,361,241,0" HorizontalAlignment="Right" Width="146"  Opacity="0.98">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    
</Window>