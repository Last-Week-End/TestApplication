<Window x:Class="TestingAppInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingAppInterface"
        mc:Ignorable="d"
        Title="Перевод единиц информации" Height="500" Width="800" MinHeight="500" MinWidth="800">
    <Grid Background="White">

        <TextBlock HorizontalAlignment="Center" Height="146" Margin="0,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="650" FontFamily="Bahnschrift Light Condensed" FontSize="48" Text="Перевод единиц информации" FontWeight="Bold" TextAlignment="Center" RenderTransformOrigin="0.5,0.5"/>

        <Button x:Name="ButtonTraining" Content="Начать Тренировку" HorizontalAlignment="Right" Height="130" Margin="10,150" VerticalAlignment="Bottom" Width="250" Click="Button_Click" FontFamily="Bahnschrift Condensed" FontSize="24" Opacity="0.82" Foreground="White" Background="#FF0032FF" Panel.ZIndex="52" BorderThickness="1,1,1,1" RenderTransformOrigin="-4,0.5" >
            <Button.Style>

                <Style/>
            </Button.Style>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="ButtonTraining_Копировать" Content="Начать Тестирование" HorizontalAlignment="Right" Height="135" Margin="10,10" VerticalAlignment="Bottom" Width="250" Click="Button_Click" FontFamily="Bahnschrift Condensed" FontSize="24" Opacity="0.82" Foreground="Black" Background="#FFD9D9D9" Panel.ZIndex="52" BorderThickness="1,1,1,1" RenderTransformOrigin="-4,0.5" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <Button.Style>

                <Style/>
            </Button.Style>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>



</Window>