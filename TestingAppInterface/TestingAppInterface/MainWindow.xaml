<Window x:Class="TestingAppInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingAppInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Viewbox Stretch="Uniform">
        <Grid Background="White" Width="800" Height="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="371*"/>
                <ColumnDefinition Width="Auto" MinWidth="383"/>
            </Grid.ColumnDefinitions>

            <!-- Заголовок -->


            <TextBlock TextWrapping="Wrap" Margin="0,0,-12,0" Grid.ColumnSpan="4" FontSize="20" Grid.Row="1" Foreground="#FF0032FF" FontFamily="Wide Latin" Opacity="0.25"><Run Text="100010101010101001010101010110101010110100110100110101100101011010101010"/><Run Text=""/><LineBreak/><Run/><Run Text="                        "/></TextBlock>

            <!-- Кнопка "Начать Тренировку" -->
            <Button x:Name="ButtonTraining" Content="Начать Тренировку" Click="ButtonTraining_Click" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" 
                    FontFamily="Bahnschrift Light" FontSize="24" Opacity="0.82" Foreground="White" 
                    Background="#FF0032FF" BorderThickness="1" RenderTransformOrigin="0.5,0.5" Padding="10"
                    Height="104" Margin="0,329,0,0" HorizontalAlignment="Right" Width="315">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Кнопка "Начать Тестирование" -->
            <Button x:Name="ButtonTesting" Content="Начать Тестирование" Grid.Row="1" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                    FontFamily="Bahnschrift Light" FontSize="24" Opacity="0.82" Foreground="Black" 
                    Background="#FFD9D9D9" BorderThickness="1" RenderTransformOrigin="0.5,0.5" 
                    Margin="0,145,-12,0" Padding="10" Height="105" Width="315" Grid.Column="3" >

                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" 
                       TextWrapping="Wrap" FontFamily="Bahnschrift Light Condensed" FontSize="48" 
                       Text="Перевод единиц информации" FontWeight="Bold" TextAlignment="Center" 
                       RenderTransformOrigin="0.5,0.5" Margin="0,10,84,0" Height="84" Width="597" Grid.Column="2" Grid.RowSpan="2" Foreground="#FF020101" Background="White"
                       
        
                />
            <!-- Заголовок -->
        </Grid>
    </Viewbox>
</Window>